#!/usr/bin/env ruby

=begin
Copyright (c) 2010 tddium.com All Rights Reserved
=end

$LOAD_PATH.unshift File.join(File.dirname(__FILE__), '..', 'lib')

require 'tddium'
require 'rubygems'
require 'rake'
require 'fileutils'

gem 'rspec', ">1.2.6"
require 'spec/rake/spectask'

gem "selenium-client", ">1.2.16"
require "selenium/rake/tasks"

namespace :config do
  task :init do
    init_task
  end

  task :reset do
    rm CONFIG_FILE_PATH, :force => true
  end
end

result_path = "./tmp/test_report.html"

namespace :internal do
  Spec::Rake::SpecTask.new('sequential') do |t|
    conf = read_config
    t.pattern = conf[:test_pattern] || "**/*_spec.rb"
    t.spec_opts << '--color'
    t.spec_opts << "--require 'rubygems,selenium/rspec/reporting/selenium_test_report_formatter'"
    t.spec_opts << "--format=Selenium::RSpec::SeleniumTestReportFormatter:#{result_path}"
    t.spec_opts << "--format=progress"                
    t.fail_on_error = true
    t.verbose = true
  end

  task :start do
    server = start_instance
    ENV['SELENIUM_RC_HOST'] = server.dns_name
  end

  task :stop do
    stop_instance
  end
end

namespace :test do
  task :sequential do
    begin
      puts "starting EC2 Instance"
      Rake::Task['internal:start'].execute
      puts "Running tests. Results will be in #{result_path}"
      sleep 30
      Rake::Task['internal:sequential'].execute
    ensure
      Rake::Task['internal:stop'].execute
    end
  end
end

begin
  Rake::Task[ARGV.first].execute
rescue RuntimeError
  puts "Error running '#{ARGV.first}'.  Try one of:"
  puts
  Rake::Task.tasks.each do |t|
    puts t
  end
  puts
end


